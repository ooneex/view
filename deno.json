{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "emitDecoratorMetadata": true,
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ]
  },
  "imports": {
    "@config/app": "./config/app/mod.ts",
    "@views": "./views/mod.ts",
    "@controllers/": "./controllers/",

    "@ooneex/collection": "../Core/Collection/mod.ts",
    "@ooneex/config": "../Core/Config/mod.ts",
    "@ooneex/controller": "../Core/Controller/mod.ts",
    "@ooneex/decorator": "../Core/Decorator/mod.ts",
    "@ooneex/directory": "../Core/Directory/mod.ts",
    "@ooneex/env": "../Core/Env/mod.ts",
    "@ooneex/exception": "../Core/Exception/mod.ts",
    "@ooneex/file": "../Core/File/mod.ts",
    "@ooneex/helper": "../Core/Helper/mod.ts",
    "@ooneex/http": "../Core/Http/mod.ts",
    "@ooneex/ioc": "../Core/Ioc/mod.ts",
    "@ooneex/island": "../Core/Island/mod.ts",
    "@ooneex/kernel": "../Core/Kernel/mod.ts",
    "@ooneex/output": "../Core/Output/mod.ts",
    "@ooneex/path": "../Core/Path/mod.ts",
    "@ooneex/routing": "../Core/Routing/mod.ts",
    "@ooneex/view": "../Core/View/mod.ts",

    "testing/": "https://deno.land/std@0.182.0/testing/",
    "preact": "https://esm.sh/preact@10.13.2",
    "preact/": "https://esm.sh/preact@10.13.2/",
    "solid-js": "https://cdn.skypack.dev/solid-js",
    "solid-js/web": "https://cdn.skypack.dev/solid-js/web"
  },
  "tasks": {
    "start": "deno task assets && deno task server",
    "assets:watch": "docker-compose run --build --rm ooneex_view_assets sh ./watch.sh",
    "assets:build": "docker-compose run --build --rm ooneex_view_assets sh ./build.sh",
    "assets:sh": "docker-compose run --rm ooneex_view_assets sh",
    "server": "deno run -A --watch=.env,.env.local,config/,controllers/,middlewares/,islands/ index.ts",
    "test": "deno test -A",
    "test:watch": "deno test -A --watch",
    "fmt": "deno fmt",
    "lint": "deno fmt --check && deno lint"
  },
  "nodeModulesDir": true
}
